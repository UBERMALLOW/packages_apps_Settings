<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/uber_settings_title" >

    <PreferenceCategory
        android:key="category_uber_personalization"
        android:title="@string/uber_menu_personalizaton" >

    <PreferenceScreen
        android:key="status_bar_general_category"
		android:fragment="com.android.settings.uber.StatusBarSettings"
        android:title="@string/status_bar_screen_title" />

    <PreferenceScreen
        android:key="navigation_bar_general_category"
		android:fragment="com.android.settings.uber.NavigationBarSettings"
        android:title="@string/navigation_bar_screen_title" />

    <PreferenceScreen
        android:key="gestures_general_category"
		android:fragment="com.android.settings.uber.GestureSettings"
        android:title="@string/gestures_title" />

    <PreferenceScreen
        android:key="volume_rocker_general_category"
		android:fragment="com.android.settings.uber.VolumeRockerSettings"
        android:title="@string/volume_rocker_screen_title" />
</PreferenceCategory>
</PreferenceScreen>
